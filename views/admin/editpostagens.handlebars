<style>
    .card-container {
        margin: 2rem 4rem;
        border: 1px solid #eee;
        padding: 60px;
    }
    .card-post form{
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    .label-post {
        font-family: sans-serif;
        font-weight: bold;
    }
    .form-control {
        width: 100%;
        margin-bottom: 10px;
        background-color: #eee;
        border: none;
        border-radius: 4px;
        height: 40px;
        outline-color: teal;
        cursor: pointer;
        padding: 0 10px;
    }
   .title-post {
    margin-bottom: 2rem;
    font-weight: bolder;
   }

</style>


<div class="card-container">
    <div class="card-post">
        <h1 class="title-post">Editar Postagem: </h1>
        <form action="/admin/postagem/edit" method="POST">
             <input type="hidden" value="{{postagem._id}}" name="id">

            <label for="titulo" class="label-post">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            
            <label for="slug" class="label-post">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">

             <label for="descricao" class="label-post">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">

             <label for="conteudo" class="label-post">Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>

             <label for="categoria">Editar Categoria: </label>
             <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                  <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
             </select>   
            <button class="btn" type="submit">Editar postagem</button>
        </form>
    </div>
</div>