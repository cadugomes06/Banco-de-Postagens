<style>
    .categoria-container {
        margin-top: 4rem;
        margin-left: 4rem;
    }
    .categoria-container h2 {
        margin-bottom: 2rem;
    }
    hr {
        margin-bottom: 1rem;
        width: 600px;
    }
    .card-container {
        margin: 1rem 2rem;
        padding: 20px;
        border: 1px solid #eee;
        border-radius: 6px;
    }
    .card  {
        color: black;
        width: 100%;
        height: 100%;
    }
    .card button {
        margin-top: 20px;
        text-transform: lowercase;
    }
    .btn-danger {
        padding: 5px 10px;
        border-radius: 4px;
        border: none;
        color: white;
        background: rgb(214, 53, 24);
    }

</style>




<div class="categoria-container">


<h2>Lista de categorias: </h2>
{{#each categorias}}
    <div class="card-container">
        <div class="card">
            <h4>{{nome}}</h4>
            <p>{{slug}}</p>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn ">Editar categoria</button></a>

               <form action="/admin/categorias/deletar" method="POST">
                 <input type="hidden" name="id" value="{{_id}}">
                 <button type="submit" class="btn-danger">Deletar</button>
                </form>
        </div>
    </div>
{{else}}
{{/each}}

<hr>
<a href="/admin/categorias/add"><button class="btn">Nova categoria</button></a>
</div>